<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="ac" prefHeight="200.0" prefWidth="300.0"
            style="-fx-background-color: #24293E;" stylesheets="@css/round.css" xmlns="http://javafx.com/javafx/19"
            fx:controller="tin.bank.client.control.LogInDialog">
    <children>
        <VBox layoutX="100.0" layoutY="-46.0" prefHeight="200.0" prefWidth="100.0" stylesheets="@css/round.css"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" maxHeight="40.0" prefHeight="40.0" prefWidth="300.0"
                      stylesheets="@css/round.css"/>
                <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="55.0" prefWidth="200.0"
                      stylesheets="@css/round.css">
                    <children>
                        <MFXTextField fx:id="usr" floatMode="BORDER" prefHeight="40.0" prefWidth="160.0"
                                      promptText="Username"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" layoutX="10.0" layoutY="50.0" prefHeight="55.0" prefWidth="200.0"
                      stylesheets="@css/round.css">
                    <children>
                        <MFXPasswordField fx:id="pwd" floatMode="BORDER" prefHeight="40.0" prefWidth="160.0"
                                          promptText="Password"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" layoutX="10.0" layoutY="110.0" prefHeight="50.0" prefWidth="200.0"
                      spacing="20.0" stylesheets="@css/round.css">
                    <children>
                        <MFXButton fx:id="logInBtn" buttonType="RAISED" depthLevel="LEVEL5" text="Login">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </MFXButton>
                        <MFXButton fx:id="registerBtn" buttonType="RAISED" depthLevel="LEVEL5" layoutX="131.0"
                                   layoutY="20.0" text="Register">
                            <font>
                                <Font size="15.0"/>
                            </font>
                        </MFXButton>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
